<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bữa sáng: 1 dĩa cơm tấm, 1 ly sữa."
        android:textSize="20sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Giữa buổi: 1 ly ngũ cốc."
        android:textSize="20sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bữa trưa: 4 bát cơm, 1 bát canh gà lá giang, 100g tôm rang muối, 1 ly sinh tố."
        android:textSize="20sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Giữa buổi: 1 ly chè đậu đen."
        android:textSize="20sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bữa tối: 4 bát cơm, 1 bát canh cà chua, mực xào dưa cà, 1 hộp sữa chua.
"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bữa nhẹ: 2 trái chuối, 1 ly nước ép trái cây."
        android:textSize="20sp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/gay"
        android:id="@+id/imageView" />


</LinearLayout>